# ssh settings

# Default config
Host *
    AddressFamily any
    Compression yes
    ConnectionAttempts 2
    # Necessary for zsh completion
    HashKnownHosts no
    IdentityFile ~/.ssh/id_rsa
    NumberOfPasswordPrompts 3
    AddKeysToAgent yes
    UseKeychain yes

Include ~/.dotfiles/work/ssh/config

Host github.com
    User git
    IdentitiesOnly yes

Host gitlab.com
    User git
    IdentitiesOnly yes

Host weasly
    HostName 10.10.10.10
    User aaron

