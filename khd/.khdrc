# khd config for keybindings

# Map keys for focussing windows
alt - h : chunkc tiling::window --focus west
alt - j : chunkc tiling::window --focus south
alt - k : chunkc tiling::window --focus north
alt - l : chunkc tiling::window --focus east

# Map keys for moving windows
shift + alt - h : chunkc tiling::window --warp west
shift + alt - j : chunkc tiling::window --warp south
shift + alt - k : chunkc tiling::window --warp north
shift + alt - l : chunkc tiling::window --warp east

# Map keys for increasing region size
alt - a : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge west
alt - s : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south
alt - w : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north
alt - d : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge east

# Map keys for decreasing region size
shift + alt - a : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge west
shift + alt - s : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge south
shift + alt - w : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge north
shift + alt - d : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge east

# Map key for resetting window sizes
shift + alt - 0 : chunkc tiling::desktop --equalize

# Map key for tree rotation
alt - r : chunkc tiling::desktop --rotate 90

# Map key for toggling mirroring of tree y-axis
alt - y : chunkc tiling::desktop --mirror vertical

# Map key for toggling mirroring of tree x-axis
alt - x : chunkc tiling::desktop --mirror horizontal

# Map key for window fullscreen
alt - f : chunkc tiling::window --toggle fullscreen

# Map toggle window split type
alt - e : chunkc tiling::window --toggle split

# Map toggle float mode for window
alt - t : chunkc tiling::window --toggle float

# App shortcuts
cmd - return : open -a /Applications/iTerm.app
